#!/bin/bash

# Fixed filename for the commit log
FILENAME="commit_log.txt"

# Get the current date and time
CURRENT_DATETIME=$(date +"%Y-%m-%d_%H-%M-%S")

# Create or update the file with the current date and time
cat > "$FILENAME" << EOF
# Git Commit Log

**Last Updated:** ${CURRENT_DATETIME}

This file is automatically updated before each Git commit.
EOF

echo "Updated commit log file: ${FILENAME}"

# Add the file to the current commit
git add "$FILENAME"

echo "Added updated commit log file to the current commit"